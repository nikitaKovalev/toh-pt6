{
    "$schema": "http://json-schema.org/schema",
    "$id": "page-component",
    "title": "Page Component",
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "format": "path",
            "description": "Path at which to create the module.",
            "$default": {
                "$source": "workingDirectory"
            },
            "x-prompt": "Where should be created the module?"
        },
        "name": {
            "type": "string",
            "description": "The name of the page.",
            "x-prompt": "What name would you like to use for the page?"
        }
    },
    "required": ["name"]
}
