{
    "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
    "version": "0.0.0",
    "schematics": {
        "page-component": {
            "description": "Schematics for creating standalone page component",
            "factory": "./page/index#page",
            "schema": "./page/schema.json",
            "aliases": ["page"]
        },
        "base-component": {
            "description": "Schematics for creating standalone base component",
            "factory": "./base/index#base",
            "schema": "./base/schema.json",
            "aliases": ["base"]
        },
        "module": {
            "description": "Schematics for creating module with next structure: ui, feature -> [module-name]-shell, data-access",
            "factory": "./module/index#module",
            "schema": "./module/schema.json"
        },
        "state-ngrx": {
            "description": "Schematics for creating state",
            "factory": "./state/index#state",
            "schema": "./state/schema.json",
            "aliases": ["st"]
        }
    }
}
